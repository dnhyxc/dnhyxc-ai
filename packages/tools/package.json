{
	"name": "@dnhyxc-ai/tools",
	"version": "0.0.1",
	"type": "module",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"sideEffects": true,
	"scripts": {
		"clean": "rm -rf dist src/styles.ts",
		"build:css": "node scripts/build-mk-css.js",
		"build": "pnpm clean && pnpm build:css && tsup",
		"prepack": "pnpm build"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		},
		"./styles": {
			"types": "./dist/styles.d.ts",
			"import": "./dist/styles.js",
			"require": "./dist/styles.js"
		},
		"./styles/*": "./dist/styles/*.css",
		"./styles/*.css": "./dist/styles/*.css",
		"./styles.css": "./dist/styles/markdown-styles.css",
		"./markdown-styles.css": "./dist/styles/markdown-styles.css"
	},
	"dependencies": {
		"github-markdown-css": "^5.8.1",
		"highlight.js": "^11.11.1",
		"katex": "^0.16.28",
		"markdown-it": "^14.1.0",
		"markdown-it-katex": "^2.0.3"
	},
	"devDependencies": {
		"@types/highlight.js": "^10.1.0",
		"@types/katex": "^0.16.8",
		"@types/markdown-it": "^14.1.2",
		"tsup": "^8.5.1"
	}
}
